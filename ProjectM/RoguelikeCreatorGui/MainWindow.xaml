<Window x:Class="RoguelikeCreatorGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoguelikeCreatorGui"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <xctk:Zoombox>
        <Canvas Name="MyCanvas" Width="2000" Height="2000" Background="Transparent">
        </Canvas>
        <xctk:Zoombox.ContextMenu>
            <ContextMenu>
                <MenuItem Header="If" Click="CreateIfNode"></MenuItem>
                <MenuItem Header="Add" Click="CreateAddNode"></MenuItem>
            </ContextMenu>
        </xctk:Zoombox.ContextMenu>
    </xctk:Zoombox>
</Window>
